# Проброс портов с сервера на локалку . На моем 9999 будет доступен порт сервера 3000
ssh -L 9999:localhost:3000 root@serverIP

#Копирование папки по ssh
scp -r .test admin@test.ru:home/qq/path

ssh-keygen -t ed25519 -C "comment" -f ./deploy_key -N ""

ssh -i ./deploy_key user@your.server.com

ssh-keyscan -t ed25519 your.server.com >> known_hosts
